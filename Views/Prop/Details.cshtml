@model OnlineHouseRentManagementSystem.Models.property

@{
    ViewBag.Title = "Details";
}
<link href="~/Content/stylesheets/Property/PropertyDetails.css" rel="stylesheet" />
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Seller Contact Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Name : @Model.seller.seller_name</p>
                <p>Mobile / Whatsapp No : @Model.seller.seller_phone</p>
                <p>Email : @Model.seller.seller_email</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid main text-capitalize">
    <div class="container header">
        <div class="row">
            <div class="col c1">
                <svg xmlns="http://www.w3.org/2000/svg" width="45" height="45" fill="currentColor" class="bi bi-house-door col-12" viewBox="0 0 16 16">
                    <path d="M8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4.5a.5.5 0 0 0 .5-.5v-4h2v4a.5.5 0 0 0 .5.5H14a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146zM2.5 14V7.707l5.5-5.5 5.5 5.5V14H10v-4a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5v4H2.5z" />
                </svg>
                <p class="text-center">Rent</p>
            </div>
            <div class="col-sm-6 c1 prop-head">
                <h5>@Model.bhk BHK @Model.property_type for @Model.lease</h5>
                <p>@Model.property_address</p>
            </div>
            <div class="col c1">
                <h5>₹@Model.expected_rent.ToString("0.00")</h5>
                <p>Rent Amount</p>
            </div>
            <div class="col c1">
                <h5>@Model.property_size</h5>
                <p>Sqft</p>
            </div>
            <div class="col c1">
                <h5>₹@Model.expected_deposit.ToString("0.00")</h5>
                <p>Deposit</p>
            </div>
        </div>
    </div>
    <div class="container content">
        <div class="row">
            <div class="col-sm-7 c2 img">
                <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
                    <div class="carousel-inner in">
                        @{
                            int count = 1;
                            if (Model.property_images.Count == 0)
                            {
                                <div class="carousel-item active">
                                    <img src="~/Content/images/no image.jpg" class="d-block w-100" height="350" alt="...">
                                </div>
                            }
                        }
                        @foreach (var image in Model.property_images)
                        {
                            var base64 = Convert.ToBase64String(image.property_images1);
                            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                            if (count == 1)
                            {
                                <div class="carousel-item active">
                                    <img src="@imgSrc" class="d-block w-100" height="350" alt="...">
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <img src="@imgSrc" class="d-block w-100" height="350" alt="...">
                                </div>
                            }
                            count++;
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col c2 det">
                <div class="container">
                    <div class="row">
                        <div class="col c3">
                            <p>@Model.bedroom Bedroom</p>
                            <p><span>No. of Bedroom</span></p>
                        </div>
                        <div class="col c3">
                            <p>@Model.property_type</p>
                            <p><span>Property Type</span></p>
                        </div>
                        <div class="w-100"></div>
                        <div class="col c3">
                            <p>@Model.preferred_tenants</p>
                            <p><span>Preferred Tenant</span></p>
                        </div>
                        <div class="col c3">
                            @if (Model.available_date > DateTime.Today)
                            {
                                <p>@Model.available_date.ToString("d")</p>
                                <p><span>Availabe From</span></p>
                            }
                            else
                            {
                                <p>@Model.property_status</p>
                                <p><span>Status</span></p>
                            }
                        </div>
                        <div class="w-100"></div>
                        <div class="col c3">
                            <p>@Model.parking</p>
                            <p><span>Parking</span></p>
                        </div>
                        <div class="col c3">
                            <p>@Model.property_age</p>
                            <p><span>Age</span></p>
                        </div>
                        <div class="w-100"></div>
                        <div class="col c3">
                            <p>1</p>
                            <p><span>Balcony</span></p>
                        </div>
                        <div class="col c3">
                            <p>@Model.post_date.ToString("d")</p>
                            <p><span>Posted On</span></p>
                        </div>
                        <div class="w-100"></div>
                        <div class="col btns">
                            <button type="button" class="btn btn-info w-100" data-toggle="modal" data-target="#exampleModal">Contact</button>
                        </div>
                        <div class="col btns">
                            @using (Html.BeginForm("Create", "Bookings", FormMethod.Post))
                            {
                            @Html.AntiForgeryToken();
                            @Html.HiddenFor(model => model.property_id);
                            <button type="submit" class="btn btn-primary w-100">Make Request</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid overview-main">
        <div class="container overview">
            <h3>Overview</h3>
            <p style="margin-left:16px;font-weight:bold;text-align:center;">@Model.property_name</p>
            <hr />
            <div class="container">
                <div class="row">
                    <div class="col c4">
                        <div class="container">
                            <div class="row">
                                <div class="col">
                                    <p><span>Furnishing Status</span></p>
                                </div>
                                <div class="col"><p>@Model.furnishing</p></div>
                                <div class="w-100"></div>
                                <div class="col"><p><span>Bathroom</span></p></div>
                                <div class="col"><p>@Model.bathroom</p></div>
                                <div class="w-100"></div>
                                <div class="col"><p><span>Water Supply</span></p></div>
                                <div class="col"><p>Corpration & Borewell</p></div>
                            </div>
                        </div>
                    </div>
                    <div class="col c4">
                        <div class="row">
                            <div class="col">
                                <p><span>Facing</span></p>
                            </div>
                            <div class="col">
                                <p>@Model.facing</p>
                            </div>
                            <div class="w-100"></div>
                            <div class="col"><p><span>Floor</span></p></div>
                            <div class="col"><p>@Model.floor/@Model.total_floor</p></div>
                            <div class="w-100"></div>
                            <div class="col"><p><span>Gated Security</span></p></div>
                            <div class="col"><p>No</p></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container description">
            <h3>Description</h3>
            <p>@Model.description</p>
        </div>
    </div>
</div>











