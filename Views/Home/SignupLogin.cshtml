            </div>
            <div class="col-lg c">
                <button type="button" class="btn btn-primary col-12 b" id="customer">Customer</button>
            </div>
        </div>
        <div class="container login">@Html.Partial("Login")</div>
        <div class="container seller">@Html.Partial("SellerCreate")</div>
