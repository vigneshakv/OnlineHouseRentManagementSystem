@if ((String)Session["message"] != null && (String)Session["message"] != "")
{
    var msg = (String)Session["message"];
    <div class="container alert alert-danger text-center col-sm-7" role="alert" id="alert">
       @msg
    </div>
    Session["message"] = null;
    Session.Clear();
}
<div class="content container col-md-6">
