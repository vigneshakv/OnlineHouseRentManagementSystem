@model OnlineHouseRentManagementSystem.Models.user

@{
    ViewBag.Title = "Edit";
}
<link href="~/Content/stylesheets/Home/SignupLogin.css" rel="stylesheet" />
<div class="content container-md col-md-7">
    <div class="header">
        <h1>Change Password</h1>
    </div>
    @using (Html.BeginForm("Edit", "Users", FormMethod.Post, new { onsubmit = "return check()" }))
    {
        @Html.AntiForgeryToken()
        <div class="container login change-password">
            <div class="row lr">
                <p class="font-weight-bold">@Html.ValidationMessageFor(model => model.user_password, "", new { @class = "text-danger" })</p>
            </div>
            @Html.HiddenFor(model => model.user_id)
            <div class="row lr">
                <input type="password" placeholder="New Password" class="form-control col-sm-10 lin" id="new_password" name="new_password" required aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
            </div>
            <div class="row lr">
                <input type="password" placeholder="Confirm Password" class="form-control col-sm-10 lin" id="user_password" name="user_password" required aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">

            </div>
            <div class="row lr">
                <button type="submit" class="btn btn-primary lb col-sm-5">Continue</button>
            </div>
        </div>
    }
</div>




