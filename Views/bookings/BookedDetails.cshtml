@model OnlineHouseRentManagementSystem.Models.booking_details

@{
    ViewBag.Title = "BookedDetails";
}
<h2>BookedDetails</h2>
<div>
    <h4>booking_details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.booking_status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.booking_status)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.book_date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.book_date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.property.property_type)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.property.property_type)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.property.property_name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.property.property_name)
        </dd>

        <dd>
            @{
                var images = Model.property.property_images.FirstOrDefault(m => m.property_id == Model.property.property_id);
                var imgSrc = "";
                if (images != null)
                {
                    var base64 = Convert.ToBase64String(images.property_images1);
                    imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                }
                
            }
            <img src="@imgSrc" width="200" height="200" />

        </dd>
        @Html.HiddenFor(model => model.property_id)

    </dl>
</div>
<p>
    @Html.ActionLink("GetDetails", "Details", "Prop", new { id = Model.property_id }, null)
</p>
